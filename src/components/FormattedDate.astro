---
interface Props {
    date: Date;
}

const {date} = Astro.props;
---


<time datetime={date?.toISOString()}>
    {
        date && (
            date.toLocaleDateString('es-LA', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
            })
        )
    }
</time>
