---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2 class="text-3xl font-bold text-center w-full py-5 md:py-0"><a href="/">{SITE_TITLE}</a></h2>

    <div class="internal-links flex-wrap w-full flex justify-center">
      <HeaderLink href="/">Inicio</HeaderLink>
      <HeaderLink href="/lessons">Lecciones</HeaderLink>
      <HeaderLink href="/more">Otros</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0.5rem 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
	flex-wrap: wrap ;
    align-items: center;
    justify-content: space-between;
  }

  @media (width > 720px) {
	nav {
		flex-wrap: nowrap;
	}
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

</style>
